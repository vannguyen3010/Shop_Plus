@{
    int categoryId = Convert.ToInt32(ViewBag.categoryId);
    string categoryTitle = ViewBag.categoryTitle;
    var breadCrumb = new ThreeF_WebPortal.ViewModels.VM_BreadCrumb
            {
                currentName = string.IsNullOrEmpty(categoryTitle) ? "Tin tức" : categoryTitle,
                lv1Name = !string.IsNullOrEmpty(categoryTitle) ? "Tin tức" : categoryTitle,
                lv1Url = string.IsNullOrEmpty(categoryTitle) ? "" : "/tin-tuc",
            };
}
@section Scripts{
    <script src="~/controllers/News.js" asp-append-version="true"></script>
}
@section Styles{
    <link href="~/css/news.css" rel="stylesheet" asp-append-version="true"/>
}

<input type="hidden" id="input_keyword" value="@ViewBag.keyword" />
<input type="hidden" id="input_category_id" value="@ViewBag.categoryId" />
<input type="hidden" id="input_page" value="@ViewBag.page" />
<input type="hidden" id="input_record" value="@ViewBag.record" />

<partial name="_P_Breadcrumb" model="breadCrumb" />
<section class="blog-section section-b-space">
    <div class="container-fluid-lg">
        <div class="row g-4">
            <div class="col-xxl-9 col-xl-8 col-lg-7 order-lg-1">
                <div class="row g-4 ratio_65">
                    <div id="div_main_data" style="display: flex;flex-wrap: wrap">
                       
                       
                    </div>
                </div>

                <nav class="custome-pagination">
                    <ul class="pagination justify-content-center" id="ul_main_pagination">
                     
                    </ul>
                </nav>
            </div>
            <div class="col-xxl-3 col-xl-4 col-lg-5 order-lg-2">
                <div class="left-sidebar-box wow fadeInUp">

                    <div class="accordion left-accordion-box" id="accordionPanelsStayOpenExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                                        aria-controls="panelsStayOpen-collapseOne">
                                    Tin tức mới nhất
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show"
                                 aria-labelledby="panelsStayOpen-headingOne">
                                <div class="accordion-body pt-0">
                                    <div id="ul_latest_news">
                                      
                                    </div>
                                    
                                </div>
                            </div>
                        </div>

                       
                   
                    </div>
                </div>
               
            </div>
           
        </div>
        <div class="col-12 col-md-12 col-lg-12 news_wrappper order-2 order-md-3 order-lg-3 bg-danger">
            <div class="product-pagination">
                <div class="theme-paggination-block">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 order-2">
                            <nav aria-label="Page navigation">
                                <ul class="pagination text-center" id="ul_main_pagination" style="padding-right:0;justify-content:center"></ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

